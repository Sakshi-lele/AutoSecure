@model IEnumerable<Auto_Insurance_Management_System.Models.Claim>
@{
    ViewData["Title"] = "Manage Claims";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-clipboard-list me-2 text-primary"></i>
            Manage Insurance Claims
        </h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card shadow-lg">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Policy Number</th>
                            <th>Customer Name</th>
                            <th>Claim Type</th>
                            <th>Incident Date</th>
                            <th>Amount Requested</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.ClaimId</td>
                                <td>@(claim.Policy?.PolicyNumber ?? "N/A")</td>
                                <td>@(claim.Policy?.User?.FirstName ?? "Unknown") @(claim.Policy?.User?.LastName ?? "")</td>
                                <td>@claim.ClaimType</td>
                                <td>@claim.IncidentDate.ToShortDateString()</td>
                                <td>â‚¹@claim.ClaimAmountRequested.ToString("N0")</td>
                                <td>
                                    <span class="badge @GetStatusBadge(claim.Status)">
                                        @claim.Status
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@claim.ClaimId" 
                                       class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> Review
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadge(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Submitted => "bg-secondary",
            ClaimStatus.Open => "bg-primary",
            ClaimStatus.UnderReview => "bg-info",
            ClaimStatus.Approved => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            ClaimStatus.Settled => "bg-warning",
            _ => "bg-secondary"
        };
    }
}