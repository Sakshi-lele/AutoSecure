@model SupportTicket

@{
    ViewData["Title"] = "Create Support Ticket";
}

<div class="container">
    <!-- Success Message Alert -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <h2>Create Support Ticket</h2>
    <hr />
    
    <form asp-action="Create">
          @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId" />
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label">Select Policy</label>
                    <select asp-for="PolicyId" class="form-select">
                        <option value="">-- Select Policy --</option>
                        @foreach (var policy in ViewBag.UserPolicies)
                        {
                            <option value="@policy.Id">@policy.PolicyNumber - @policy.VehicleDetails</option>
                        }
                    </select>
                    <span asp-validation-for="PolicyId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="QueryType" class="form-label"></label>
                    <select asp-for="QueryType" asp-items="Html.GetEnumSelectList<QueryType>()" 
                            class="form-select"></select>
                    <span asp-validation-for="QueryType" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="form-group mb-4">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-paper-plane me-2"></i>Submit Ticket
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </form>
</div>

<!-- Add Bootstrap JS for alert dismissal -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}