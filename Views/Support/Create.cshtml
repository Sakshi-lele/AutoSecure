@model SupportTicket

@{
    ViewData["Title"] = "Create Support Ticket";
}

<div class="container mt-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h2 class="mb-3">Create Support Ticket</h2>
    <hr />

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="UserId" />

        <div class="row">
            <div class="col-md-6">
                <!-- Policy Selection -->
                <div class="mb-3">
                    <label for="PolicyId" class="form-label">Select Policy</label><span class="text-danger"> *</span>
                    <select asp-for="PolicyId" class="form-select" id="PolicyId" required>
                        <option value="">-- Select Policy --</option>
                        @foreach (var policy in ViewBag.UserPolicies)
                        {
                            <option value="@policy.Id">@policy.PolicyNumber - @policy.VehicleDetails</option>
                        }
                    </select>
                    <span asp-validation-for="PolicyId" class="text-danger"></span>
                </div>

                <!-- Query Type -->
                <div class="mb-3">
                    <label asp-for="QueryType" class="form-label"></label><span class="text-danger"> *</span>
                    <select asp-for="QueryType" asp-items="Html.GetEnumSelectList<QueryType>()" 
                            class="form-select" required></select>
                    <span asp-validation-for="QueryType" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label><span class="text-danger"> *</span>
                    <textarea asp-for="Description" class="form-control" rows="6" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-paper-plane me-2"></i>Submit Ticket
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap form validation styling (optional)
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
