@model IEnumerable<Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">My Insurance Claims</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> File New Claim
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            You haven't filed any claims yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Claim ID</th>
                        <th>Policy Number</th>
                        <th>Incident Date</th>
                        <th>Claim Type</th>
                        <th>Amount Requested</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimId</td>
                            <td>@claim.Policy?.PolicyNumber</td>
                            <td>@claim.IncidentDate.ToString("dd MMM yyyy")</td>
                            <td>@claim.ClaimType</td>
                            <td>â‚¹@claim.ClaimAmountRequested.ToString("N2")</td>
                            <td>
                                <span class="badge rounded-pill @GetStatusBadge(claim.Status)">
                                    @claim.Status
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@claim.ClaimId" 
                                   class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye me-1"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    string GetStatusBadge(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Submitted => "bg-secondary text-white",
            ClaimStatus.Open => "bg-primary text-white",
            ClaimStatus.UnderReview => "bg-info text-dark",
            ClaimStatus.Approved => "bg-success text-white",
            ClaimStatus.Rejected => "bg-danger text-white",
            ClaimStatus.Settled => "bg-warning text-dark",
            _ => "bg-light text-dark"
        };
    }
}
