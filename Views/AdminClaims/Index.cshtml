@model IEnumerable<Auto_Insurance_Management_System.Models.Claim>
@{
    ViewData["Title"] = "Verified Claims";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-file-medical me-2 text-primary"></i>
            Verified Claims
        </h2>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    No verified claims found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Claim ID</th>
                                <th>Policy Number</th>
                                <th>Customer Name</th>
                                <th>Claim Type</th>
                                <th>Incident Date</th>
                                <th>Amount Requested</th>
                                <th>Status</th>
                                <th>Verified By</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.Policy?.PolicyNumber</td>
                                    <td>@claim.Policy?.User?.FirstName @claim.Policy?.User?.LastName</td>
                                    <td>@claim.ClaimType</td>
                                    <td>@claim.IncidentDate.ToShortDateString()</td>
                                    <td>â‚¹@claim.ClaimAmountRequested.ToString("N0")</td>
                                    <!-- Fixed: Use GetStatusBadge function -->
                                    <td>
                                        <span class="badge @GetStatusBadge(claim.Status)">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td>@claim.VerifiedByAgent?.FirstName @claim.VerifiedByAgent?.LastName</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@claim.ClaimId" 
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Review
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusBadge(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Submitted => "bg-secondary",
            ClaimStatus.Open => "bg-primary",
            ClaimStatus.UnderReview => "bg-info",
            ClaimStatus.Verified => "bg-secondary",
            ClaimStatus.Approved => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            ClaimStatus.Declined => "bg-warning",
            ClaimStatus.Settled => "bg-warning",
            _ => "bg-secondary"
        };
    }
}