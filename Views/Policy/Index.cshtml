@model IEnumerable<Auto_Insurance_Management_System.ViewModels.PolicyDetailsViewModel>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Auto_Insurance_Management_System.Models.User> SignInManager
@inject UserManager<Auto_Insurance_Management_System.Models.User> UserManager

@{
    ViewData["Title"] = "Policies";
    var isAdminOrAgent = User.IsInRole("ADMIN") || User.IsInRole("AGENT");
}

<div class="container mt-4">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Policies</h2>
        @if (isAdminOrAgent)
        {
            <a asp-action="DeletedPolicies" class="btn btn-outline-danger">
                <i class="fas fa-trash-restore-alt me-1"></i> View Deleted Policies
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No policies found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Policy Number</th>
                        <th>Status</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PolicyNumber</td>
                            <td>
                                <span class="badge rounded-pill @GetPolicyStatusBadgeClass(item.PolicyStatus)">
                                    @item.PolicyStatus
                                </span>
                            </td>
                            <td>@item.StartDate.ToString("dd MMM yyyy")</td>
                            <td>@item.EndDate.ToString("dd MMM yyyy")</td>
                            <td class="text-center">
                                <div class="d-flex flex-wrap justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.PolicyId" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit me-1"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PolicyId" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye me-1"></i> Details
                                    </a>

                                    @if (isAdminOrAgent)
                                    {
                                        <button class="btn btn-sm btn-outline-danger" onclick="toggleDeleteForm(@item.PolicyId)">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </button>
                                    }
                                </div>

                                @if (isAdminOrAgent)
                                {
                                    <div id="delete-form-@item.PolicyId" class="border rounded p-2 mt-2 bg-light collapse">
                                        <form method="post" asp-action="Delete">
                                            <input type="hidden" name="PolicyId" value="@item.PolicyId" />
                                            <div class="mb-2">
                                                <select name="deleteReason" class="form-select" onchange="toggleOtherInput(@item.PolicyId, this)">
                                                    <option value="">-- Select Reason --</option>
                                                    <option value="Requested by user">Requested by user</option>
                                                    <option value="Fraudulent activity">Fraudulent activity</option>
                                                    <option value="Expired coverage">Expired coverage</option>
                                                    <option value="Other">Other</option>
                                                </select>
                                            </div>
                                            <div class="mb-2" id="other-reason-@item.PolicyId" style="display: none;">
                                                <input type="text" name="otherReason" class="form-control" placeholder="Specify other reason" />
                                            </div>
                                            <button type="submit" class="btn btn-sm btn-warning">Confirm Delete</button>
                                        </form>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleDeleteForm(policyId) {
            const el = document.getElementById(`delete-form-${policyId}`);
            el.classList.toggle('show');
        }

        function toggleOtherInput(policyId, selectEl) {
            const otherInput = document.getElementById(`other-reason-${policyId}`);
            otherInput.style.display = (selectEl.value === 'Other') ? 'block' : 'none';
        }
    </script>
}

@functions {
    public string GetPolicyStatusBadgeClass(string status)
    {
        return status switch
        {
            "Active" => "bg-success text-white",
            "Expired" => "bg-secondary text-white",
            "Pending" => "bg-warning text-dark",
            "Cancelled" => "bg-danger text-white",
            _ => "bg-light text-dark"
        };
    }
}
