@model List<Auto_Insurance_Management_System.ViewModels.PolicyDetailsViewModel>
@{
    ViewData["Title"] = "Policies";
    var searchTerm = ViewBag.SearchTerm as string;
    var statusFilter = ViewBag.StatusFilter as string;
    var user = ViewBag.User as Auto_Insurance_Management_System.Models.User;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        @if (user?.Role == UserRole.CUSTOMER)
                        {
                            <text>My Policies</text>
                        }
                        else
                        {
                            <text>Policy Management</text>
                        }
                    </h3>
                    @if (user?.Role == UserRole.ADMIN || user?.Role == UserRole.AGENT)
                    {
                        <div class="btn-group">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create New Policy
                            </a>
                        </div>
                    }
                </div>

                @if (user?.Role != UserRole.CUSTOMER)
                {
                    <div class="card-body border-bottom">
                        <form method="get" class="row g-3">
                            <!-- Search form remains the same -->
                        </form>
                    </div>
                }

                <div class="card-body">
                    @if (Model.Any())
                    {
                        <!-- Table remains the same, just update role checks -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <!-- Table headers remain the same -->
                                <tbody>
                                    @foreach (var policy in Model)
                                    {
                                        <tr>
                                            <!-- Table cells remain the same -->
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@policy.PolicyId"
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (user?.Role == UserRole.ADMIN || user?.Role == UserRole.AGENT)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@policy.PolicyId"
                                                           class="btn btn-outline-warning" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        @if (user?.Role == UserRole.ADMIN)
                                                        {
                                                            <a asp-action="Delete" asp-route-id="@policy.PolicyId"
                                                               class="btn btn-outline-danger" title="Delete">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        }
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file-contract fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No policies found</h5>
                            @if (user?.Role != UserRole.CUSTOMER)
                            {
                                <p class="text-muted">Get started by creating a new policy.</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Create First Policy
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>