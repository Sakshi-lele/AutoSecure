@model List<Auto_Insurance_Management_System.ViewModels.PolicyDetailsViewModel>

@{
    ViewData["Title"] = "Policies";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Policies</h1>
        <div>
            @if (User.IsInRole(Auto_Insurance_Management_System.Models.UserRole.ADMIN.ToString()) || 
                 User.IsInRole(Auto_Insurance_Management_System.Models.UserRole.AGENT.ToString()))
            {
                <a asp-action="Create" class="btn btn-success">+ Create New Policy</a>
            }
        </div>
    </div>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Search by Policy Number</label>
                <input type="text" name="searchString" value="@ViewBag.CurrentSearch" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Policy Status</label>
                <select name="policyStatus" asp-items="ViewBag.PolicyStatuses" class="form-select"></select>
            </div>
            <div class="col-md-5 d-flex gap-2">
                <button type="submit" class="btn btn-info">Search</button>
                <a asp-action="Index" class="btn btn-secondary">Clear Filter</a>
            </div>
        </div>
    </form>

    <div class="d-flex flex-wrap gap-2 mb-3">
        @if (User.IsInRole(Auto_Insurance_Management_System.Models.UserRole.CUSTOMER.ToString()))
        {
            <a asp-controller="Policy" asp-action="Request" class="btn btn-primary">Request New Policy</a>
        }

        @if (User.IsInRole(Auto_Insurance_Management_System.Models.UserRole.ADMIN.ToString()))
        {
            <a asp-controller="Policy" asp-action="Requests" class="btn btn-warning">View Policy Requests</a>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Policy #</th>
                    <th>Customer Name</th>
                    <th>Vehicle</th>
                    <th>Coverage Type</th>
                    <th>Coverage ₹</th>
                    <th>Premium ₹</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PolicyNumber</td>
                            <td>@item.UserName</td>
                            <td>@item.VehicleDetails</td>
                            <td>@item.CoverageType</td>
                            <td>@item.CoverageAmount.ToString("C")</td>
                            <td>@item.PremiumAmount.ToString("C")</td>
                            <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge bg-@GetBadgeColor(item.PolicyStatus)">
                                    @item.PolicyStatus
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    @if (User.IsInRole(Auto_Insurance_Management_System.Models.UserRole.AGENT.ToString()))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.PolicyId" class="btn btn-outline-primary">Edit</a>
                                    }
                                    <a asp-action="Details" asp-route-id="@item.PolicyId" class="btn btn-outline-secondary">Details</a>
                                    @if (User.IsInRole(Auto_Insurance_Management_System.Models.UserRole.ADMIN.ToString()))
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.PolicyId" class="btn btn-outline-danger">Delete</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" class="text-center text-muted">No policies found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    @functions {
        public string GetBadgeColor(string status)
        {
            return status switch
            {
                "Active" => "success",
                "Pending" => "warning",
                "Expired" => "danger",
                _ => "secondary"
            };
        }
    }
}
