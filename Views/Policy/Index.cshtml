@model List<Auto_Insurance_Management_System.ViewModels.PolicyDetailsViewModel>
@{
    ViewData["Title"] = "Policies";
    var currentUserRole = ViewBag.CurrentUserRole as string;
    var searchTerm = ViewBag.SearchTerm as string;
    var statusFilter = ViewBag.StatusFilter as string;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        @if (currentUserRole == "CUSTOMER")
                        {
                            <text>My Policies</text>
                        }
                        else
                        {
                            <text>Policy Management</text>
                        }
                    </h3>
                    @if (currentUserRole == "ADMIN" || currentUserRole == "AGENT")
                    {
                        <div class="btn-group">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create New Policy
                            </a>
                        </div>
                    }
                </div>

                @if (currentUserRole != "CUSTOMER")
                {
                    <div class="card-body border-bottom">
                        <form method="get" class="row g-3">
                            <div class="col-md-4">
                                <label for="search" class="form-label">Search</label>
                                <input type="text" class="form-control" id="search" name="search"
                                       value="@searchTerm" placeholder="Policy number, customer name, vehicle...">
                            </div>
                            <div class="col-md-3">
                                <label for="status" class="form-label">Status Filter</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="">All Statuses</option>
                                    <option value="ACTIVE" selected="@(statusFilter == "ACTIVE")">ACTIVE</option>
                                    <option value="INACTIVE" selected="@(statusFilter == "INACTIVE")">INACTIVE</option>
                                    <option value="EXPIRED" selected="@(statusFilter == "EXPIRED")">EXPIRED</option>
                                    <option value="CANCELLED" selected="@(statusFilter == "CANCELLED")">CANCELLED</option>
                                </select>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-outline-primary me-2">
                                    <i class="fas fa-search"></i> Search
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i> Clear
                                </a>
                            </div>
                        </form>
                    </div>
                }

                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Policy Number</th>
                                        <th>Customer</th>
                                        <th>Vehicle</th>
                                        <th>Coverage</th>
                                        <th>Premium</th>
                                        <th>Period</th>
                                        <th>Status</th>
                                        <th>Claims</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var policy in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@policy.PolicyNumber</strong>
                                            </td>
                                            <td>@policy.UserName</td>
                                            <td>
                                                <small class="text-muted">@policy.VehicleDetails</small>
                                            </td>
                                            <td>
                                                <div>@policy.CoverageType</div>
                                                <small class="text-success">@policy.CoverageAmount.ToString("C")</small>
                                            </td>
                                            <td>
                                                <strong class="text-primary">@policy.PremiumAmount.ToString("C")</strong>
                                            </td>
                                            <td>
                                                <div>@policy.StartDate.ToString("MM/dd/yyyy")</div>
                                                <small class="text-muted">to @policy.EndDate.ToString("MM/dd/yyyy")</small>
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = policy.PolicyStatus switch
                                                    {
                                                        "ACTIVE" => "success",
                                                        "EXPIRED" => "danger",
                                                        "CANCELLED" => "secondary",
                                                        "INACTIVE" => "warning",
                                                        _ => "info"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@policy.PolicyStatus</span>
                                                @if (policy.EndDate <= DateTime.Today.AddDays(30) && policy.PolicyStatus == "ACTIVE")
                                                {
                                                    <br>

                                                    <small class="text-warning"><i class="fas fa-exclamation-triangle"></i> Expiring Soon</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@policy.Claims.Count</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@policy.PolicyId"
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (currentUserRole == "ADMIN" || currentUserRole == "AGENT")
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@policy.PolicyId"
                                                           class="btn btn-outline-warning" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        @if (currentUserRole == "ADMIN")
                                                        {
                                                            <a asp-action="Delete" asp-route-id="@policy.PolicyId"
                                                               class="btn btn-outline-danger" title="Delete">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        }
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file-contract fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">gvjvlg @currentUserRole</h5> 
                            @if (currentUserRole != "CUSTOMER")
                            {
                                <p class="text-muted">Get started by creating a new policy.</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Create First Policy
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>