@model List<Auto_Insurance_Management_System.ViewModels.PolicyDetailsViewModel>

@{

    ViewData["Title"] = "Policy Requests";

}
<h2>Pending Policy Requests</h2>
<table class="table table-bordered">
<thead>
<tr>
<th>Policy Number</th>
<th>Customer</th>
<th>Vehicle</th>
<th>Coverage</th>
<th>Premium</th>
<th>Dates</th>
<th>Status</th>
<th>Actions</th>
</tr>
</thead>
<tbody>

    @foreach (var req in Model)

    {
<tr>
<td>@req.PolicyNumber</td>
<td>@req.UserName</td>
<td>@req.VehicleDetails</td>
<td>@req.CoverageType ($@req.CoverageAmount)</td>
<td>$@req.PremiumAmount</td>
<td>@req.StartDate.ToShortDateString() - @req.EndDate.ToShortDateString()</td>
<td><span class="badge bg-warning text-dark">@req.PolicyStatus</span></td>
<td>
<form asp-action="Accept" asp-route-id="@req.PolicyId" method="post" style="display:inline">
<button type="submit" class="btn btn-success btn-sm">Accept</button>
</form>
<form asp-action="Decline" asp-route-id="@req.PolicyId" method="post" style="display:inline">
<button type="submit" class="btn btn-danger btn-sm">Decline</button>
</form>
</td>
</tr>

    }
</tbody>
</table>
 