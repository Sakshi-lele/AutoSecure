@model Auto_Insurance_Management_System.ViewModels.CreatePolicyViewModel

@{
    ViewData["Title"] = "Edit Policy";
}

<div class="container mt-4">
    <h2 class="mb-4">Edit Policy</h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PolicyId" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Customer Selection -->
        <div class="mb-3">
            <label asp-for="UserId" class="form-label"></label>
            <select asp-for="UserId" class="form-select" asp-items="@(new SelectList(ViewBag.Customers, "Value", "Text", Model.UserId))">
                <option value="">-- Select Customer --</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <!-- Policy Number -->
        <div class="mb-4">
            <label asp-for="PolicyNumber" class="form-label"></label>
            <input asp-for="PolicyNumber" class="form-control" />
            <span asp-validation-for="PolicyNumber" class="text-danger"></span>
        </div>

        <h5 class="mt-4">Vehicle Information</h5>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="VehicleMake" class="form-label"></label>
                <input asp-for="VehicleMake" class="form-control" />
                <span asp-validation-for="VehicleMake" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="VehicleModel" class="form-label"></label>
                <input asp-for="VehicleModel" class="form-control" />
                <span asp-validation-for="VehicleModel" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="VehicleYear" class="form-label"></label>
                <input asp-for="VehicleYear" class="form-control" type="number" />
                <span asp-validation-for="VehicleYear" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="LicensePlate" class="form-label"></label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>
        </div>

        <h5 class="mt-4">Coverage Details</h5>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="CoverageType" class="form-label"></label>
                <input asp-for="CoverageType" class="form-control" />
                <span asp-validation-for="CoverageType" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="CoverageAmount" class="form-label"></label>
                <input asp-for="CoverageAmount" class="form-control" />
                <span asp-validation-for="CoverageAmount" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="PremiumAmount" class="form-label"></label>
                <input asp-for="PremiumAmount" class="form-control" />
                <span asp-validation-for="PremiumAmount" class="text-danger"></span>
            </div>
        </div>

        <h5 class="mt-4">Policy Dates</h5>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <!-- Policy Status -->
        <div class="mt-4 mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select">
                <option value="ACTIVE">Active</option>
                <option value="PENDING">Pending</option>
                <option value="EXPIRED">Expired</option>
                <option value="CANCELLED">Cancelled</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="d-flex gap-3 mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i>Save
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
