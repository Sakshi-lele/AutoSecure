@model List<Auto_Insurance_Management_System.ViewModels.PolicyDetailsViewModel>
@{
    ViewData["Title"] = "Expiring Policies";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card border-warning">
                <div class="card-header bg-warning d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Expiring Policies (Next 30 Days)
                    </h3>
                    <div class="btn-group">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to All Policies
                        </a>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create New Policy
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="alert alert-warning" role="alert">
                            <h4 class="alert-heading">Attention Required!</h4>
                            <p>The following <strong>@Model.Count</strong> policies are expiring within the next 30 days. Consider reaching out to customers for renewal.</p>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Policy Number</th>
                                        <th>Customer</th>
                                        <th>Vehicle</th>
                                        <th>Coverage</th>
                                        <th>Premium</th>
                                        <th>End Date</th>
                                        <th>Days Left</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var policy in Model.OrderBy(p => p.EndDate))
                                    {
                                        var daysLeft = (policy.EndDate - DateTime.Today).Days;
                                        var urgencyClass = daysLeft <= 7 ? "table-danger" : daysLeft <= 15 ? "table-warning" : "";

                                        <tr class="@urgencyClass">
                                            <td>
                                                <strong>@policy.PolicyNumber</strong>
                                            </td>
                                            <td>
                                                @policy.UserName
                                            </td>
                                            <td>
                                                <small class="text-muted">@policy.VehicleDetails</small>
                                            </td>
                                            <td>
                                                <div>@policy.CoverageType</div>
                                                <small class="text-success">@policy.CoverageAmount.ToString("C")</small>
                                            </td>
                                            <td>
                                                <strong class="text-primary">@policy.PremiumAmount.ToString("C")</strong>
                                            </td>
                                            <td>
                                                @policy.EndDate.ToString("MMM dd, yyyy")
                                            </td>
                                            <td>
                                                @if (daysLeft <= 0)
                                                {
                                                    <span class="badge bg-danger">Expired</span>
                                                }
                                                else if (daysLeft <= 7)
                                                {
                                                    <span class="badge bg-danger">@daysLeft days</span>
                                                }
                                                else if (daysLeft <= 15)
                                                {
                                                    <span class="badge bg-warning">@daysLeft days</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@daysLeft days</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = policy.PolicyStatus switch
                                                    {
                                                        "ACTIVE" => "success",
                                                        "EXPIRED" => "danger",
                                                        "CANCELLED" => "secondary",
                                                        "INACTIVE" => "warning",
                                                        _ => "info"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@policy.PolicyStatus</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@policy.PolicyId"
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@policy.PolicyId"
                                                       class="btn btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (policy.PolicyStatus == "ACTIVE")
                                                    {
                                                        <button type="button" class="btn btn-outline-success"
                                                                title="Quick Renew" onclick="quickRenew(@policy.PolicyId, '@policy.PolicyNumber')">
                                                            <i class="fas fa-sync-alt"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Summary Cards -->
                        <div class="mt-4">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="card border-danger">
                                        <div class="card-body text-center">
                                            <h5 class="card-title text-danger">Critical (≤7 days)</h5>
                                            <h3 class="text-danger">@Model.Count(p => (p.EndDate - DateTime.Today).Days <= 7 && (p.EndDate - DateTime.Today).Days >= 0)</h3>
                                            <small class="text-muted">Immediate action required</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border-warning">
                                        <div class="card-body text-center">
                                            <h5 class="card-title text-warning">Warning (8-15 days)</h5>
                                            <h3 class="text-warning">@Model.Count(p => (p.EndDate - DateTime.Today).Days > 7 && (p.EndDate - DateTime.Today).Days <= 15)</h3>
                                            <small class="text-muted">Contact customers soon</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border-info">
                                        <div class="card-body text-center">
                                            <h5 class="card-title text-info">Notice (16-30 days)</h5>
                                            <h3 class="text-info">@Model.Count(p => (p.EndDate - DateTime.Today).Days > 15 && (p.EndDate - DateTime.Today).Days <= 30)</h3>
                                            <small class="text-muted">Plan renewal outreach</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border-secondary">
                                        <div class="card-body text-center">
                                            <h5 class="card-title text-secondary">Already Expired</h5>
                                            <h3 class="text-secondary">@Model.Count(p => (p.EndDate - DateTime.Today).Days < 0)</h3>
                                            <small class="text-muted">Requires immediate attention</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="mt-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="d-grid">
                                                <button type="button" class="btn btn-outline-primary" onclick="exportExpiringPolicies()">
                                                    <i class="fas fa-download"></i> Export to Excel
                                                </button>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="d-grid">
                                                <button type="button" class="btn btn-outline-success" onclick="sendRenewalNotices()">
                                                    <i class="fas fa-envelope"></i> Send Renewal Notices
                                                </button>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="d-grid">
                                                <a asp-action="Create" class="btn btn-outline-warning">
                                                    <i class="fas fa-plus"></i> Create Renewal Policy
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">Great News!</h5>
                            <p class="text-muted">No policies are expiring in the next 30 days.</p>
                            <div class="mt-3">
                                <a asp-action="Index" class="btn btn-primary me-2">
                                    <i class="fas fa-list"></i> View All Policies
                                </a>
                                <a asp-action="Create" class="btn btn-outline-primary">
                                    <i class="fas fa-plus"></i> Create New Policy
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function quickRenew(policyId, policyNumber) {
            if (confirm(`Do you want to renew policy ${policyNumber} for another year?`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Renew", "Policy")';

                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = policyId;

                const startDateInput = document.createElement('input');
                startDateInput.type = 'hidden';
                startDateInput.name = 'newStartDate';
                startDateInput.value = new Date().toISOString().split('T')[0];

                const endDateInput = document.createElement('input');
                endDateInput.type = 'hidden';
                endDateInput.name = 'newEndDate';
                const nextYear = new Date();
                nextYear.setFullYear(nextYear.getFullYear() + 1);
                endDateInput.value = nextYear.toISOString().split('T')[0];

                // Add anti-forgery token
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';

                form.appendChild(idInput);
                form.appendChild(startDateInput);
                form.appendChild(endDateInput);
                form.appendChild(tokenInput);

                document.body.appendChild(form);
                form.submit();
            }
        }

        function exportExpiringPolicies() {
            window.location.href = '@Url.Action("ExportExpiring", "Policy")';
        }

        function sendRenewalNotices() {
            if (confirm('Send renewal notices to all customers with expiring policies?')) {
                fetch('@Url.Action("SendRenewalNotices", "Policy")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Renewal notices sent successfully!');
                    } else {
                        alert('Error sending renewal notices: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while sending renewal notices.');
                });
            }
        }
    </script>
}