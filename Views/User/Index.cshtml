@model IEnumerable<Auto_Insurance_Management_System.Models.User>
@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <h2 class="mb-4">User Management</h2>

    <!-- Success & Error Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- User Table -->
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th style="width: 180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Role.ToString()</td>
                        <td>
                            <span class="badge @GetStatusBadge(user.IsActive)">
                                @(user.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                @if (user.IsActive)
                                {
                                    <form asp-action="Deactivate" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure you want to deactivate this user?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-user-slash me-1"></i>Deactivate
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    private string GetStatusBadge(bool isActive)
    {
        return isActive ? "bg-success" : "bg-secondary";
    }
}
