@model Auto_Insurance_Management_System.ViewModels.UserDetailsViewModel
@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Details</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Users
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">User Information</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.User.Email</dd>

                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.User.FirstName @Model.User.LastName</dd>

                        <dt class="col-sm-4">Role:</dt>
                        <dd class="col-sm-8">@Model.User.Role</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.User.IsActive ? "bg-success" : "bg-secondary")">
                                @(Model.User.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Registered:</dt>
                        <dd class="col-sm-8">@Model.User.CreatedAt.ToString("dd MMM yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Due Payments Section -->
    <div class="card">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Due Payments</h4>
        </div>
        <div class="card-body">
            @if (Model.DuePayments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Policy Number</th>
                                <th>Amount Due</th>
                                <th>Due Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model.DuePayments)
                            {
                                <tr>
                                    <td>@payment.PolicyNumber</td>
                                    <td>@payment.PaymentAmount.ToString("C")</td>
                                    <td>@payment.DueDate.ToString("dd MMM yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    <i class="fas fa-check-circle me-2"></i>No due payments found for this user.
                </div>
            }
        </div>
    </div>
</div>