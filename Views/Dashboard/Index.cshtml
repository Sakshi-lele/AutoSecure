@model Auto_Insurance_Management_System.Models.User
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white p-4 rounded">
                <h1 class="display-4">Welcome to Auto Insurance Management System!</h1>
                <p class="lead">Hello, @Model.FirstName @Model.LastName <span class="badge bg-info">@Model.Role.ToString()</span></p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        @if (Model.Role == UserRole.ADMIN)
        {
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">User Management</h5>
                        <p class="card-text">Manage system users and roles</p>
                        <a asp-controller="User" asp-action="Index" class="btn btn-primary">Manage Users</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">System Reports</h5>
                        <p class="card-text">View system analytics and reports</p>
                        <a asp-controller="Report" asp-action="Index" class="btn btn-info">View Reports</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">System Settings</h5>
                        <p class="card-text">Configure system settings</p>
                        <a asp-controller="Setting" asp-action="Index" class="btn btn-secondary">Settings</a>
                    </div>
                </div>
            </div>
        }
        else if (Model.Role == UserRole.AGENT)
        {
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Policy Management</h5>
                        <p class="card-text">Create and manage insurance policies</p>
                        <a asp-controller="Policy" asp-action="Index" class="btn btn-success">Manage Policies</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Claims Processing</h5>
                        <p class="card-text">Process and approve claims</p>
                        <a asp-controller="Policy" asp-action="AllClaims" class="btn btn-warning">Process Claims</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Customer Support</h5>
                        <p class="card-text">Handle customer inquiries</p>
                        <a asp-controller="Support" asp-action="Index" class="btn btn-info">Support Tickets</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">My Policies</h5>
                        <p class="card-text">View your insurance policies</p>
                        <a asp-controller="Policy" asp-action="Index" class="btn btn-primary">View Policies</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">File Claim</h5>
                        <p class="card-text">Submit a new insurance claim</p>
                        <a asp-controller="Policy" asp-action="CreateClaim" class="btn btn-danger">File Claim</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Payment History</h5>
                        <p class="card-text">View payment history</p>
                        <a asp-controller="Payment" asp-action="Index" class="btn btn-success">View Payments</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Quick Stats</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <h3 class="text-primary">125</h3>
                            <p>Active Policies</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-warning">45</h3>
                            <p>Pending Claims</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-success">89</h3>
                            <p>Resolved Claims</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-info">12</h3>
                            <p>Support Tickets</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>