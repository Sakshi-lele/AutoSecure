@model Auto_Insurance_Management_System.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="container-fluid mt-4">
    <!-- Welcome Banner -->
    <div class="welcome-banner">
        <h1 class="display-4 mb-3">Welcome Back!</h1>
        <p class="lead mb-0">
            Hello, @Model.CurrentUser.FirstName @Model.CurrentUser.LastName
            <span class="badge bg-light text-dark ms-2">@Model.CurrentUser.Role.ToString()</span>
        </p>
    </div>

    @if (Model.CurrentUser.Role == UserRole.ADMIN)
    {
        <div class="row g-4 mb-5">
            <!-- User Management -->
            <div class="col-lg-3 col-md-6">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon admin-gradient text-white">
                            <i class="fas fa-users"></i>
                        </div>
                        <h5 class="card-title fw-bold">User Management</h5>
                        <p class="card-text text-muted">Manage system users, roles, and permissions</p>
                        <a asp-controller="User" asp-action="Index" class="quick-action-btn">
                            <strong>Manage Users</strong>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Claim Management -->
            <div class="col-lg-3 col-md-6">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon admin-gradient text-white">
                            <i class="fas fa-file-medical"></i>
                        </div>
                        <h5 class="card-title fw-bold">Claim Management</h5>
                        <p class="card-text text-muted">Review and process verified insurance claims</p>
                        <a asp-controller="AdminClaims" asp-action="Index" class="quick-action-btn">
                            <strong>Manage Claims</strong>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- System Reports -->
            <div class="col-lg-3 col-md-6">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon admin-gradient text-white">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <h5 class="card-title fw-bold">System Reports</h5>
                        <p class="card-text text-muted">Comprehensive analytics and business insights</p>
                        <a asp-controller="Report" asp-action="Index" class="quick-action-btn">
                            <strong>View Reports</strong>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Payment Management -->
            <div class="col-lg-3 col-md-6">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon admin-gradient text-white">
                            <i class="fas fa-credit-card"></i>
                        </div>
                        <h5 class="card-title fw-bold">Payment Management</h5>
                        <p class="card-text text-muted">Manage premium payments and billing</p>
                        <a asp-controller="AdminPayments" asp-action="Index" class="quick-action-btn">
                            <strong>Manage Payments</strong>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Support Tickets -->
            <div class="col-lg-3 col-md-6">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon admin-gradient text-white">
                            <i class="fas fa-headset"></i>
                        </div>
                        <h5 class="card-title fw-bold">Support Tickets</h5>
                        <p class="card-text text-muted">View and manage user support requests</p>
                        <a asp-controller="Support" asp-action="Index" class="quick-action-btn">
                            <strong>View Tickets</strong>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Policies Table -->
        <div class="admin-table mb-5">
            <div class="card-header admin-gradient text-white p-4">
                <h4 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>All Policies Overview</h4>
            </div>
            <div class="card-body p-0">
                <div class="search-section">
                    <div class="row align-items-end">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <a asp-controller="Policy" asp-action="Create" class="btn btn-primary btn-lg me-2">
                                    <i class="fas fa-plus me-2"></i>Create New Policy
                                </a>
                                @{
                                    // Only show "Policy Requests" for Admin
                                    if (User.IsInRole(Auto_Insurance_Management_System.Models.UserRole.ADMIN.ToString()))
                                    {
                                        <a asp-controller="Policy" asp-action="Requests" class="btn btn-warning btn-lg me-2">Policy Requests</a>
                                    }
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <form asp-controller="Policy" asp-action="Index" method="get" class="d-flex gap-2">
                                <input type="text" name="searchString" value="@ViewBag.CurrentSearch"
                                       class="form-control" placeholder="Search by Policy Number or Customer Name">
                                <select name="policyStatus" asp-items="ViewBag.PolicyStatuses" class="form-select"></select>
                                <button type="submit" class="btn btn-info">Search</button>
                                <a asp-controller="Policy" asp-action="Index" class="btn btn-secondary">Clear</a>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Policy Number</th>
                                <th>Customer Name</th>
                                <th>Vehicle Details</th>
                                <th>Coverage Type</th>
                                <th>Coverage Amount</th>
                                <th>Premium Amount</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th width="120">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AllPolicies != null && Model.AllPolicies.Any())
                            {
                                @foreach (var item in Model.AllPolicies)
                                {
                                    <tr>
                                        <td><strong>@item.PolicyNumber</strong></td>
                                        <td>@item.UserName</td>
                                        <td>@item.VehicleDetails</td>
                                        <td>@item.CoverageType</td>
                                        <td>$@item.CoverageAmount</td>
                                        <td>$@item.PremiumAmount</td>
                                        <td>@item.StartDate.ToString("MM/dd/yyyy")</td>
                                        <td>@item.EndDate.ToString("MM/dd/yyyy")</td>
                                        <td>
                                            @if (item.PolicyStatus.ToString().ToLower() == "active")
                                            {
                                                <span class="status-active">ACTIVE</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@item.PolicyStatus</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Policy" asp-action="Details" asp-route-id="@item.PolicyId"
                                               class="action-btn btn-details" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-controller="Policy" asp-action="Delete" asp-route-id="@item.PolicyId"
                                               class="action-btn btn-delete" title="Delete Policy">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" class="text-center py-5">
                                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                        <br>No policies found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (Model.CurrentUser.Role == UserRole.AGENT)
    {
        <!-- Agent Dashboard -->
        <div class="row g-4 mb-5">
            <div class="col-lg-6">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon agent-gradient text-white">
                            <i class="fas fa-file-contract"></i>
                        </div>
                        <h5 class="card-title fw-bold">Policy Management</h5>
                        <p class="card-text text-muted">Create, edit and manage insurance policies</p>
                        <a asp-controller="Policy" asp-action="Index" class="quick-action-btn">
                            <strong>Manage Policies</strong>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon agent-gradient text-white">
                            <i class="fas fa-clipboard-check"></i>
                        </div>
                        <h5 class="card-title fw-bold">Claims Processing</h5>
                        <p class="card-text text-muted">Review, process and approve insurance claims</p>
                        <a asp-controller="AgentClaims" asp-action="Index" class="quick-action-btn">
                            <strong>Process Claims</strong>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Original Customer Dashboard -->
        <div class="row g-4 mb-5">
            <div class="col-lg-3">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon customer-gradient text-white">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h5 class="card-title fw-bold">My Policies</h5>
                        <p class="card-text text-muted">View and manage your insurance policies</p>
                        <a asp-controller="Policy" asp-action="Index" class="quick-action-btn">
                            <strong>View My Policies</strong>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon customer-gradient text-white">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <h5 class="card-title fw-bold">File a Claim</h5>
                        <p class="card-text text-muted">Submit a new insurance claim quickly and easily</p>
                        <a asp-controller="Claims" asp-action="Create" class="quick-action-btn">
                            <strong>File New Claim</strong>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon customer-gradient text-white">
                            <i class="fas fa-credit-card"></i>
                        </div>
                        <h5 class="card-title fw-bold">Payments</h5>
                        <p class="card-text text-muted mb-">Manage your premium payments seamlessly here</p>
                        <a asp-controller="Payment" asp-action="Index" class="quick-action-btn">
                            <strong>Manage Payments</strong>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="dashboard-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon customer-gradient text-white">
                            <i class="fas fa-headset"></i>
                        </div>
                        <h5 class="card-title fw-bold">Customer Support</h5>
                        <p class="card-text text-muted">Get assistance with your policies or claims</p>
                        <a asp-controller="Support" asp-action="Index" class="quick-action-btn">
                            <strong>Raise a Ticket</strong>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Stats Section -->
    <div class="row g-4">
        <div class="col-12 mb-4">
            <h3 class="text-center mb-4">System Overview</h3>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stats-card">
                <div class="stats-number text-primary">@Model.ActivePoliciesCount</div>
                <h6 class="text-muted mb-0">Active Policies</h6>
                <small class="text-success"><i class="fas fa-arrow-up"></i> +12% this month</small>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stats-card">
                <div class="stats-number text-warning">@Model.PendingClaimsCount</div>
                <h6 class="text-muted mb-0">Pending Claims</h6>
                <small class="text-warning"><i class="fas fa-clock"></i> Awaiting review</small>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stats-card">
                <div class="stats-number text-success">@Model.ResolvedClaimsCount</div>
                <h6 class="text-muted mb-0">Resolved Claims</h6>
                <small class="text-success"><i class="fas fa-check"></i> +5% this week</small>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stats-card">
                <div class="stats-number text-info">@Model.ActiveTicketsCount</div>
                <h6 class="text-muted mb-0">Support Tickets</h6>
                <small class="text-info"><i class="fas fa-headset"></i> Active support</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}