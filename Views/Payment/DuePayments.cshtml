@model List<Auto_Insurance_Management_System.ViewModels.PaymentDetailsViewModel>
@{
    ViewData["Title"] = "Due Payments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-money-bill-wave me-2 text-primary"></i>
            Due Payments
        </h2>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Policy Number</th>
                                <th>Amount Due</th>
                                <th>Due Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>@payment.PolicyNumber</td>
                                    <td>â‚¹@payment.PaymentAmount.ToString("N0")</td>
                                    <td>@DateTime.Today.ToShortDateString()</td>
                                    <td>
                                        <a asp-action="MakePayment" asp-route-policyId="@payment.PolicyId" 
                                           class="btn btn-sm btn-success">
                                            <i class="fas fa-credit-card me-1"></i> Pay Now
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    You have no due payments at this time.
                </div>
            }
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-action="PaymentHistory" class="btn btn-outline-primary">
            <i class="fas fa-history me-2"></i> View Payment History
        </a>
    </div>
</div>