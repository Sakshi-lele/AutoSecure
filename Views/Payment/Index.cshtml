@{
    ViewData["Title"] = "Payment Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-credit-card me-2 text-primary"></i>
            Payment Management
        </h2>
    </div>

    <div class="row g-4">
        <!-- Due Payments Card -->
        <div class="col-md-6">
            <div class="card h-100 shadow-lg">
                <div class="card-body text-center p-4">
                    <div class="feature-icon customer-gradient text-white mb-4">
                        <i class="fas fa-exclamation-circle fa-3x"></i>
                    </div>
                    <h3 class="card-title fw-bold mb-3">Due Payments</h3>
                    <p class="card-text text-muted mb-4">
                        View and pay your outstanding premiums before their due dates to keep your policies active.
                    </p>
                    <a asp-action="DuePayments" class="btn btn-warning btn-lg">
                        <i class="fas fa-money-bill-wave me-2"></i> View Due Payments
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Payment History Card -->
        <div class="col-md-6">
            <div class="card h-100 shadow-lg">
                <div class="card-body text-center p-4">
                    <div class="feature-icon customer-gradient text-white mb-4">
                        <i class="fas fa-history fa-3x"></i>
                    </div>
                    <h3 class="card-title fw-bold mb-3">Payment History</h3>
                    <p class="card-text text-muted mb-4">
                        Review your past transactions and download receipts for your premium payments.
                    </p>
                    <a asp-action="PaymentHistory" class="btn btn-primary btn-lg">
                        <i class="fas fa-receipt me-2"></i> View Payment History
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-5 text-center">
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
        </a>
    </div>
</div>