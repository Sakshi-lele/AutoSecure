@model IEnumerable<Auto_Insurance_Management_System.Models.Payment>
@{
    ViewData["Title"] = "Payment History";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-history me-2 text-primary"></i>
            Payment History
        </h2>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Policy</th>
                                <th>Amount</th>
                                <th>Method</th>
                                <th>Status</th>
                                <th>Receipt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>@payment.PaymentDate.ToString("dd MMM yyyy")</td>
                                    <td>@payment.Policy?.PolicyNumber</td>
                                    <td>â‚¹@payment.Amount.ToString("N0")</td>
                                    <td>@payment.PaymentMethod</td>
                                    <td>
                                        <span class="badge @GetStatusBadge(payment.Status)">
                                            @payment.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="PaymentSuccess" asp-route-id="@payment.PaymentId" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-receipt me-1"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    You haven't made any payments yet.
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusBadge(PaymentStatus status)
    {
        return status switch
        {
            PaymentStatus.Completed => "bg-success",
            PaymentStatus.Pending => "bg-warning",
            PaymentStatus.Failed => "bg-danger",
            PaymentStatus.Declined => "bg-secondary",
            PaymentStatus.Refunded => "bg-info",
            _ => "bg-secondary"
        };
    }
}